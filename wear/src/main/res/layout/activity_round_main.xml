<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:transitionGroup="false"
        app:layout_box="all">


        <Button
            android:id="@+id/main_scr_finance_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_scr_todo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|top"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:text="@string/main_scr_finance_btn_txt" />

        <Button
            android:id="@+id/main_scr_queue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|bottom"
            android:layout_toEndOf="@+id/main_scr_finance_btn"
            android:background="@color/orange"
            android:text="@string/main_scr_queue_btn_txt" />

        <Button
            android:id="@+id/main_scr_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|top"
            android:layout_marginRight="5dp"
            android:background="@color/orange"
            android:text="@string/main_scr_todo_btn_txt" />

        <Button
            android:id="@+id/main_scr_not_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/main_scr_queue_btn"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/main_scr_todo"
            android:background="@color/orange"
            android:singleLine="false"
            android:text="@string/main_scr_not_history_txt"
            android:textSize="10dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_menu_transition_image_view"
            android:visibility="gone"
            android:contentDescription="MENU_TRANSITION_IMAGE" />
    </RelativeLayout>
</android.support.wearable.view.BoxInsetLayout>